<div class="row">
  <div class="col-md-6 col-xs-6 col-md-offset-3">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Student Code:</strong>
      <%= @student.code %>
    </p>

    <p>
      <strong>Student Name:</strong>
      <%= @student.name %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @student.user.email %>
    </p>

    <p>
      <strong>Course:</strong>
      <%= @student.course.name %>
    </p>

    <p>
      <strong>Image </strong>
      <%= link_to(image_tag(@student.image.url, alt: 'Image'), @student.image.url, target: '_blank', :size => "20*20") if @student.image? %>
    </p>

    <%= link_to 'Edit', edit_student_path(@student) %> |
    <%= link_to 'Back', students_path %>
  </div>
</div>

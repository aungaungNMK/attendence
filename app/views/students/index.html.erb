<p id="notice"><%= notice %></p>

<h1>Students</h1>
<div class="navbar-form form-search navbar-right">
  <%= form_tag students_path, :method => 'get' do %>
    <div class= "form-group">
      <%= text_field_tag :search, params[:search] %>
    </div>
    <div class="pull-right voffset10">
      <%= submit_tag "Search", :name => nil, class: "fa fa-search" %>
    </div>
  <% end %>
  </div>

<table class="table table-hover">
  <thead>
    <tr>
      <th> <%= sortable "Student Code" %></th>
      <th><%= sortable "Student Name" %></th>
      <th><%= sortable "Course" %></th>
      <th><%= sortable "created_at","Created At" %></th>
      <th><%= sortable "updated_at","Updated At" %></th>
      <th><%= sortable "Created By" %><th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= link_to 'New Student', new_student_path, class: "btn btn-primary" %>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.code %></td>
        <td><%= student.name %></td>
        <td><%= student.course.name %></td>
        <td> <%= student.created_at %></td>
        <td><%= student.updated_at%> </td>
        <td> <%= student.user.name %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa-trash-o" %></td>
        <% if current_user.admin? %>
          <td> <%= link_to "Print", '#', class: "btn btn-primary", onclick: 'window.print();return false;' %>
          </td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>
<%= javascript_tag do %>
  $(document).ready(function() {
    $('#example').DataTable();
} );
<% end %>


